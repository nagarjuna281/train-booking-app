# Use official Tomcat base image with JDK 17
FROM tomcat:9.0-jdk17

# Remove default Tomcat webapps to avoid conflicts
RUN rm -rf /usr/local/tomcat/webapps/*

# Copy the WAR file from local context to Tomcat's webapps
COPY train-booking-app.war /usr/local/tomcat/webapps/train-booking-app.war

# Expose Tomcat's port
EXPOSE 8080

# Start Tomcat
CMD ["catalina.sh", "run"]
